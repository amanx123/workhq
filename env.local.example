AUTH_USERNAME=your_admin_username
# IMPORTANT: bcrypt hashes include '$' which some env loaders may treat as expansion.
# Try the quoted form first:
# AUTH_PASSWORD_HASH='$2a$12$...'
AUTH_PASSWORD_HASH='$2a$12$REPLACE_WITH_YOUR_BCRYPT_HASH'
#
# If Next still reports AUTH_PASSWORD_HASH missing/empty, use base64 instead:
# 1) node -e "const bcrypt=require('bcryptjs'); const h=bcrypt.hashSync('change-me',12); console.log(Buffer.from(h).toString('base64'))"
# 2) Set:
# AUTH_PASSWORD_HASH_B64=PASTE_BASE64_HERE

# 32+ bytes random secret. Example:
# node -e "console.log(require('crypto').randomBytes(32).toString('base64url'))"
AUTH_SECRET=REPLACE_WITH_LONG_RANDOM_SECRET

# Optional: session TTL (default 7 days)
AUTH_SESSION_TTL_SECONDS=604800


